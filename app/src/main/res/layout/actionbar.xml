<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/actionbar">

    <TextView
        android:id="@+id/title"
        style="@style/actionbar.title" />

    <com.balysv.materialmenu.MaterialMenuView
        android:id="@+id/menuIcon"
        style="@style/actionbar.menu"
        android:layout_width="45dp"
        android:layout_marginLeft="5dp"
        app:mm_color="@android:color/white" />

    <com.github.johnkil.print.PrintView
        xmlns:print="http://schemas.android.com/apk/res-auto"
        android:id="@+id/action_refresh"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        print:iconColor="@android:color/white"
        print:iconSize="22dp"
        print:iconText="@string/ic_material_refresh" />

</RelativeLayout>